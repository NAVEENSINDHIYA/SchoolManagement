<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>LoginDao</servlet-name>
        <servlet-class>Dao.LoginDao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>RegisterAll</servlet-name>
        <servlet-class>Operation.RegisterAll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Master_Login</servlet-name>
        <servlet-class>Operation.Master_Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Principle_login</servlet-name>
        <servlet-class>Operation.Principle_login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterStudent</servlet-name>
        <servlet-class>Operation.RegisterStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterAdmin</servlet-name>
        <servlet-class>Operation.RegisterAdmin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginDao</servlet-name>
        <url-pattern>/servlet/LoginDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Master_Login</servlet-name>
        <url-pattern>/Servlet/Master_Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterAll</servlet-name>
        <url-pattern>/Servlet/RegisterAll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Principle_login</servlet-name>
        <url-pattern>/Servlet/Principle_login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterStudent</servlet-name>
        <url-pattern>/RegisterStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterAdmin</servlet-name>
        <url-pattern>/RegisterAdmin</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
